<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/info_item">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/ID"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_x="2dp"
        android:layout_y="0dp"
        android:textSize="24sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/KML_textview"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/oc_name"
        android:layout_x="42dp"
        android:layout_y="1dp"
        android:text="一公升可以跑            公里(KM/L)"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="22sp"
        app:textAllCaps="false" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/oneL_runKM"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_x="174dp"
        android:layout_y="0dp"
        android:textSize="22sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/FullNT_textview"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/oc_name"
        android:layout_x="43dp"
        android:layout_y="56dp"
        android:text="目前用的油需要花            元"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="22sp"
        app:textAllCaps="false" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/KMNT_textview"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/oc_name"
        android:layout_x="43dp"
        android:layout_y="27dp"
        android:text="跑每公里油錢為            元(NT/KM)"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="22sp"
        app:textAllCaps="false" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/oneKM_money"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/oc_name"
        android:layout_marginStart="14dp"
        android:layout_x="196dp"
        android:layout_y="27dp"
        android:textSize="22sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/nowcost_NT"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="31dp"
        android:layout_x="222dp"
        android:layout_y="57dp"
        android:textSize="22sp" />

</AbsoluteLayout>