<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/last_fulloil_km"
        android:layout_width="180dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar2"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:hint="上次加滿油里程數"
        android:inputType="number|numberSigned|numberDecimal"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/now_fulloil_km"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/last_fulloil_km"
        android:layout_alignBottom="@+id/last_fulloil_km"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/last_fulloil_km"
        android:ems="10"
        android:hint="這次加滿油里程數"
        android:inputType="number|numberSigned|numberDecimal"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/now_fulloil_L"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/last_fulloil_km"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="這次加滿油加了幾公升"
        android:inputType="number|numberSigned|numberDecimal"
        android:textAlignment="viewStart" />

    <Spinner
        android:id="@+id/oilprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/now_fulloil_L"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/now_fulloil_L"
        android:layout_toEndOf="@+id/now_fulloil_L"
        android:hint="選擇油價"
        android:visibility="visible" />

    <EditText
        android:id="@+id/now_km"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/now_fulloil_L"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="現在的里程數"
        android:inputType="number|numberSigned|numberDecimal"
        android:textAlignment="center" />

    <Button
        android:id="@+id/oilcost_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/now_km"
        android:layout_toEndOf="@+id/now_fulloil_L"
        android:elevation="0dp"
        android:text="計算油耗"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="個人油耗"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar2"
        android:text="TextView"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/name"
        android:layout_toEndOf="@+id/last_fulloil_km"
        android:text="TextView"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp" />

</RelativeLayout>