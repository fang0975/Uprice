<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_oilname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:text="oil1"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="26dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView1" />

    <TextView
        android:id="@+id/tv_oilname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="oil2"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="26dp"
        android:layout_below="@+id/tv_oilname1"
        android:layout_alignStart="@+id/tv_oilname1" />

    <TextView
        android:id="@+id/tv_oilname3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_oilname2"
        android:layout_below="@+id/tv_oilname2"
        android:layout_marginTop="60dp"
        android:text="oil3"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/tv_oilname4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_oilname3"
        android:layout_below="@+id/tv_oilname3"
        android:layout_marginTop="60dp"
        android:text="oil4"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="26dp"/>

    <TextView
        android:id="@+id/tv_oilname5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_oilname4"
        android:layout_below="@+id/tv_oilname4"
        android:layout_marginTop="60dp"
        android:text="oil5"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/tv_oilprice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24dp"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/tv_oilname1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_oilprice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_oilname2"
        android:layout_alignStart="@+id/tv_oilprice1"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24dp"
        android:textStyle="normal|bold"/>

    <TextView
        android:id="@+id/tv_oilprice5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_oilname5"
        android:layout_alignStart="@+id/tv_oilprice4"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24dp"
        android:textStyle="normal|bold"/>

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="17dp"
        android:text=""/>




    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:srcCompat="@drawable/ic_local_gas_station98"
        android:layout_above="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginBottom="33dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/tv_oilname2"
        android:layout_alignStart="@+id/imageView3"
        app:srcCompat="@drawable/ic_local_gas_station95" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/tv_oilprice3"
        android:layout_alignStart="@+id/imageView4"
        app:srcCompat="@drawable/ic_local_gas_station92" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/tv_oilname5"
        android:layout_alignStart="@+id/imageView5"
        app:srcCompat="@drawable/ic_local_wine" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/tv_oilname5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        app:srcCompat="@drawable/ic_local_gas_oil" />

    <TextView
        android:id="@+id/tv_oilprice4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_oilname5"
        android:layout_alignStart="@+id/tv_oilprice3"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24dp"
        android:textStyle="normal|bold"/>

    <TextView
        android:id="@+id/tv_oilprice3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_oilprice2"
        android:layout_alignTop="@+id/tv_oilname3"
        android:text="TextView"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24dp"
        android:textStyle="normal|bold"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_oilprice1"
        android:layout_alignStart="@+id/imageView1"
        android:layout_marginBottom="31dp"
        android:layout_toStartOf="@+id/tv_oilprice1"
        android:text="台灣中油"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="30sp" />

</RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout >